{
  "name": "nodejs-tdd",
  "version": "1.0.0",
  "description": "Node RESTful API using TDD",
  "main": "app.js",
  "scripts": {
    "start": "cross-env NODE_ENV=development nodemon index.js",
    "test": "cross-env NODE_ENV=test jest --watch",
    "lint": "eslint ."
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/erictamhk/nodejs-tdd.git"
  },
  "keywords": [],
  "author": "eric tam",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/erictamhk/nodejs-tdd/issues"
  },
  "homepage": "https://github.com/erictamhk/nodejs-tdd#readme",
  "dependencies": {
    "bcrypt": "^5.0.1",
    "config": "^3.3.6",
    "express": "^4.17.1",
    "express-validator": "^6.11.1",
    "i18next": "^20.3.2",
    "i18next-fs-backend": "^1.1.1",
    "i18next-http-middleware": "^3.1.4",
    "nodemailer": "^6.6.2",
    "sequelize": "^6.6.2",
    "sqlite3": "^5.0.2"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "eslint": "^7.27.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "jest": "^27.0.3",
    "nodemailer-stub": "^1.2.2",
    "nodemon": "^2.0.7",
    "prettier": "^2.3.0",
    "supertest": "^6.1.3"
  },
  "eslintConfig": {
    "parserOptions": {
      "ecmaVersion": 2018
    },
    "extends": [
      "eslint:recommended",
      "plugin:prettier/recommended"
    ],
    "plugins": [
      "prettier"
    ],
    "env": {
      "node": true,
      "es6": true,
      "jest": true
    },
    "rules": {
      "eqeqeq": "warn",
      "prettier/prettier": "warn"
    }
  },
  "prettier": {
    "printWidth": 120,
    "endOfLine": "lf"
  }
}
